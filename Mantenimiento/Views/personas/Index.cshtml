@model Mantenimiento.Models.personasModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h2>Estados registrados</h2>
<center><button onclick="location.href='@Url.Action("Nuevo", "personas")';" class="btn btn-success" style="margin-bottom:50px; text-align:center; margin:2.53em auto;" "><span class=" glyphicon glyphicon-plus">Registrar nueva persona</span></button></center>

<table class="table table-striped" style="max-width:960px; text-align:center; margin:2.53em auto;">
    <tbody>
        <tr class="warning">
            <td> Id  </td>
            <td> Nombre</td>
            <td> Apellidos </td>
            <td> Direccion </td>
            <td> Ciudad </td>
            <td colspan="2"> <center>Opciones</center> </td>
        </tr>
        @foreach (var m in Model.listarPersonas())
        {
            <tr>
                <td> @m.id </td>
                <td> @m.Nombres </td>
                <td> @m.Apellidos </td>
                <td> @m.Direccion </td>
                <td> @m.ciudad.nombre </td>
                <td> <center><button onclick="location.href='@Url.Action("modificarPersona", "personas", new { id = m.id})';" class=" btn btn-info"><span class="glyphicon glyphicon-pencil">Modificar</span></button> </center></td>
                <td><center><button onclick="location.href='@Url.Action("eliminarPersona", "personas", new { id = m.id })';" class="btn btn-danger"><span class="glyphicon glyphicon-remove">Eliminar</span></button> </center></td>
            </tr>
        }
    </tbody>
</table>
