@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
    <link rel="stylesheet" href="~/Content/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/form-elements.css">
    <link rel="stylesheet" href="~/Content/assets/css/style.css" />
</head>
<body>
    <!-- Top content -->
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">
                <div class="row">
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Registrate</h3>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-key"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <form role="form" action="" method="post" class="login-form" id="_form">
                                <div class="form-group">
                                    <label class="sr-only" for="form-username">Username</label>
                                    <input type="text" name="form-username" id="username" placeholder="Username..." class="form-username form-control" id="form-username">
                                </div>

                                <div class="form-group">
                                    <label class="sr-only" for="form-username">Apellido Paterno</label>
                                    <input type="text" name="form-username" id="ap" placeholder="Apellido Paterno..." class="form-username form-control" id="form-username">
                                </div>

                                <div class="form-group">
                                    <label class="sr-only" for="form-username">Apellido Materno</label>
                                    <input type="text" name="form-username" id="am" placeholder="Apellido Materno..." class="form-username form-control" id="form-username">
                                </div>

                                <div class="form-group">
                                    <label class="sr-only" for="form-username">Rol</label>
                                    <label for="sel1">Selecciona Rol:</label>
                                    <select class="form-control" id="sel">
                                        <option value="27">Usuario</option>
                                        <option value="26">Administrador</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn">Registrarse!</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="~/Content/assets/js/jquery-1.11.1.min.js"></script>
    <script src="~/Content/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/jquery.backstretch.min.js"></script>
    <script src="~/Content/assets/js/scripts.js"></script>
    <script>

    $(document).ready(function () {

        $("#_form").submit(function () {
            var nombre =$("#username").val();
            var apellido_paterno = $("#ap").val();
            var apellido_materno = $("#am").val();
            var tipo_usuario = $("#sel").val();
            var array_data = new Array();

            array_data.push(nombre);
            array_data.push(apellido_materno);
            array_data.push(apellido_paterno);
            array_data.push(tipo_usuario);
            console.log(array_data);
            $.ajax({
                type: 'POST',
                traditional: true,
                url: '@Url.Action("Registrarse", "Home")',
                data: { array_data: array_data },
                success: function () {
                    alert("alta exitosa");
                    window.location = '@Url.Action("Registrarse", "Home")';

                },
                error: function (xhr, ajaxOptions, thrownError) {
                    console && console.log("request failed");
                    alert("error!##");

                }
            });



        }
        );
    });
    </script>
</body>
</html>