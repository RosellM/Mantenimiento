@model Mantenimiento.Models.PreguntaModel
@{
    ViewBag.Title = "modificarPregunta";
    Layout = null;
}

<h2>Modificar Pregunta</h2>

@using (@Html.BeginForm("modificarPregunta", "Pregunta"))
{
    @Html.HiddenFor(model=>model.id)
    @Html.LabelFor(model => model.id_seccion)
    @Html.DropDownListFor(model => model.id_seccion, Model.listaSeccion(), "-- Seleccione test --", new { @class = "form-control", required = "required" })
    @Html.LabelFor(model => model.pregunta1)
    @Html.TextBoxFor(model => model.pregunta1, new { @class = "form-control", required = "required" })
    @Html.LabelFor(model => model.respuesta)
    @Html.TextBoxFor(model => model.respuesta, new { @class = "form-control", required = "required" })

    <input type="submit" value="Registrar" class="btn btn-success btn-block margin-bottom-lg" />
}

