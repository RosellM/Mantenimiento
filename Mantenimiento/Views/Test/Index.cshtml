@model Mantenimiento.Models.TestModel
@{
    ViewBag.Title = "Test Registrados";
}

<h2>Test Registrados</h2>

<center><button onclick="location.href='@Url.Action("Nuevo", "Test")';" class="btn btn-success" style="margin-bottom:50px; text-align:center; margin:2.53em auto;" "><span class=" glyphicon glyphicon-plus">Registrar nuevo Test</span></button></center>

<table class="table table-striped" style="max-width:960px; text-align:center; margin:2.53em auto;">
    <tbody>
        <tr class="warning">
            <td> Id  </td>
            <td> Nombre</td>
            <td colspan="2"> <center>Opciones</center> </td>
        </tr>
        @foreach (var m in Model.listarTest())
        {
            <tr>
                <td> @m.id </td>
                <td> @m.nombre </td>
                <td> <center><button onclick="location.href='@Url.Action("modificarTest", "Test", new { id = m.id})';" class=" btn btn-info"><span class="glyphicon glyphicon-pencil">Modificar</span></button> </center></td>
                <td><center><button onclick="location.href='@Url.Action("eliminarTest", "Test", new { id = m.id })';" class="btn btn-danger"><span class="glyphicon glyphicon-remove">Eliminar</span></button> </center></td>
            </tr>
        }
    </tbody>
</table>
