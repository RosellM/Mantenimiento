@model Mantenimiento.Models.SeccionModel
@{
    ViewBag.Title = "Secciones Registradas";
}

<h2>Secciones Registradas</h2>

<center><button onclick="location.href='@Url.Action("Nuevo", "Seccion")';" class="btn btn-success" style="margin-bottom:50px; text-align:center; margin:2.53em auto;" "><span class=" glyphicon glyphicon-plus">Registrar nueva seccion</span></button></center>

<table class="table table-striped" style="max-width:960px; text-align:center; margin:2.53em auto;">
    <tbody>
        <tr class="warning">
            <td> Id  </td>
            <td> Nombre de la seccion </td>
            <td> Nombre del test</td>
            <td colspan="2"> <center>Opciones</center> </td>
        </tr>
        @foreach (var m in Model.listarSeccion())
        {
            <tr>
                <td> @m.id </td>
                <td> @m.nombre </td>
                <td> @m.test.nombre </td>
                <td> <center><button onclick="location.href='@Url.Action("modificarSeccion", "Seccion", new { id = m.id})';" class=" btn btn-info"><span class="glyphicon glyphicon-pencil">Modificar</span></button> </center></td>
                <td><center><button onclick="location.href='@Url.Action("eliminarSeccion", "Seccion", new { id = m.id })';" class="btn btn-danger"><span class="glyphicon glyphicon-remove">Eliminar</span></button> </center></td>
            </tr>
        }
    </tbody>
</table>