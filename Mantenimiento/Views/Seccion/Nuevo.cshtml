@model Mantenimiento.Models.SeccionModel
@{
    ViewBag.Title = "Nuevo";
    Layout = null;
}

@using (@Html.BeginForm("Nuevo", "Seccion"))
{
    if (@Model.id_test == null)
    {

        @Html.LabelFor(model => model.id_test)
        @Html.DropDownListFor(model => model.id_test, Model.listarTest(), "-- Seleccione test --", new { @class = "form-control", required = "required" })


    }
    @Html.HiddenFor(model =>model.id_test);
    @Html.LabelFor(model => model.nombre)
    @Html.TextBoxFor(model => model.nombre, new { @class = "form-control", required = "required" })

    <input type="submit" value="@Mantenimiento.idiomas.idiomas.boton_guardar" class="btn btn-success btn-block margin-bottom-lg" />
}
