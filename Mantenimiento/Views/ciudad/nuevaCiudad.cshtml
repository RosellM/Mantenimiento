@model Mantenimiento.Models.ciudadModel
@{
    Layout = null;
    ViewBag.Title = "nuevaCiudad";
}

<h2>nueva Ciudad</h2>


@using (@Html.BeginForm("nuevaCiudad", "ciudad"))
{
    @Html.Label("Seleccione un estado")
    @Html.DropDownListFor(model => model.idEstado, Model.estados(),new { @class = "form-control",placeholder="Seleccione un estado" })
    
    @Html.LabelFor(model=>model.nombre)
    @Html.TextBoxFor(model => model.nombre, new { @class = "form-control",required="required" })
    
    @Html.LabelFor(model => model.descripcion)
    @Html.TextBoxFor(model => model.descripcion, new { @class = "form-control",required="required" } )

    <input type="submit" value="@Mantenimiento.idiomas.idiomas.boton_guardar" class="btn btn-success btn-block margin-bottom-lg" />
}
